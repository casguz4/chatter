{
    "name": "signalr-vite",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "build:watch": "tsc -b && vite build --emptyOutDir --watch",
        "ci": "pnpm run lint && tsc --noEmit && vite build",
        "lint:fast": "oxlint --type-aware .",
        "lint:fast:fix": "oxlint --type-aware --fix .",
        "lint:eslint": "eslint . --ext .ts,.tsx,.js,.jsx --cache",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "format": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint": "pnpm run lint:fast && pnpm run lint:eslint && pnpm run typecheck",
        "preview": "vite preview"
    },
    "dependencies": {
        "@microsoft/signalr": "^9.0.6",
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@trivago/prettier-plugin-sort-imports": "^6.0.0",
        "@types/node": "^24.6.0",
        "@types/react": "^19.1.16",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "^5.1.0",
        "eslint": "^9.36.0",
        "eslint-plugin-oxlint": "^1.26.0",
        "eslint-plugin-react-dom": "^2.3.1",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.22",
        "eslint-plugin-react-x": "^2.3.1",
        "globals": "^16.4.0",
        "oxlint": "^1.26.0",
        "oxlint-tsgolint": "^0.5.1",
        "prettier": "^3.6.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.45.0",
        "vite": "npm:rolldown-vite@7.1.14"
    },
    "pnpm": {
        "overrides": {
            "vite": "npm:rolldown-vite@7.1.14"
        }
    }
}
